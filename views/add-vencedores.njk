{% extends "layout.njk" %}

{% block main %}

<div class="wrapper">

  <div class="wrapper__form">
    <h1>Adicionar Vencedores</h1>

    <form action="/admin/config-campeonato/{{campeonato}}/add-vencedores" method="POST">
      
      <label for="vencedor">Selecione o time em 1ยบ lugar:</label>
      <select id="vencedor" name="primeiro_lugar">
