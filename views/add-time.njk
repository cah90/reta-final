{% extends "layout.njk" %}

{% block main %}

<div class="wrapper">
    <h1>Adicionar Novo Time</h1>

    <div class="wrapper__form">
    
    <form action="/admin/config-campeonato/{{campeonato_id}}/add-time" method="POST">
      <div class="wrapper__form-name">
        <label for="nome">Nome do Time</label>
        <input type="text" id="nome" name="nome">
      </div>

      <p>
        Selecione os integrantes para formar o time:
        
        {# <span class="info-players">(selecione 11 jogadores)</span> #}
      </p>

      <div class="wrapper__form-players">


        {% for inscrito in inscritos %}
        <div class="wrapper__form-player">
          <input type="checkbox" id="player" name="player[]" value="{{inscrito.id}}">
          <label for="player">{{inscrito.nome}}</label>
        </div>
        {% endfor %}

      </div>
      
      

    

      <input class="btn btn--form" type="submit" value="Cadastrar">
    </form>
      

    
    
    </div> {# End of div wrapper__form #}
  </div> {# End of div wrapper #}

  
{% endblock %}
